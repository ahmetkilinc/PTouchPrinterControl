<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OlcumOrtamBilgileri">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="30dp">

            <TextView
                android:id="@+id/textViewGorevler"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@drawable/radsantoolbarlogo"
                android:gravity="center"
                android:text="@string/o_o_b_textviewMain" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.3"
        android:background="@android:color/background_dark"/>

    <ScrollView
        android:id="@+id/scrollViewOlcumOrtamBilgileri"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="90dp"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/o_o_b_textview"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewMarka"
                    android:layout_width="110dp"
                    android:layout_height="37dp"
                    android:gravity="center_vertical"
                    android:text="@string/o_o_b_brand" />

                <EditText
                    android:id="@+id/editTextMarka"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewModel"
                    android:layout_width="110dp"
                    android:layout_height="37dp"
                    android:gravity="center_vertical"
                    android:text="@string/o_o_b_model" />

                <EditText
                    android:id="@+id/editTextModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewSerialNo"
                    android:layout_width="110dp"
                    android:layout_height="37dp"
                    android:gravity="center_vertical"
                    android:text="@string/o_o_b_serial_no" />

                <EditText
                    android:id="@+id/editTextSerialNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/o_o_b_textview1"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textViewKalibrasyonYapanKurum"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:text="@string/o_o_b_calibration_institution" />

                <EditText
                    android:id="@+id/editTextKalibrasyonYapanKurum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewKalibrasyonTarhi"
                    android:layout_width="110dp"
                    android:layout_height="37dp"
                    android:gravity="center_vertical"
                    android:text="@string/o_o_b_calibration_date" />

                <EditText
                    android:id="@+id/editTextKalibrasyonTarihi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewKalibrasyonGecerlilikSuresi"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="@string/o_o_b_calibration_validity_date" />

                <EditText
                    android:id="@+id/editTextKalibrasyonGecerlilikSuresi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/o_o_b_textview2"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTesiseAitProje"
                    android:layout_width="110dp"
                    android:layout_height="37dp"
                    android:gravity="center_vertical"
                    android:text="@string/o_o_b_facility_project" />

                <RadioGroup
                    android:id="@+id/RadioGrouptesiseAitProje"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButtonTesiseAitProjeVar"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/o_o_b_facility_yes" />

                    <RadioButton
                        android:id="@+id/radioButtonTesiseAitProjeYok"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/o_o_b_facility_no" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewHavaDurumu"
                    android:layout_width="110dp"
                    android:layout_height="37dp"
                    android:gravity="center_vertical"
                    android:text="@string/o_o_b_weather" />

                <RadioGroup
                    android:id="@+id/RadioGroupHavaDurumu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButtonHavaDurumuAcik"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/o_o_b_weather_clear" />

                    <RadioButton
                        android:id="@+id/radioButtonHavaDurumuKapali"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/o_o_b_weather_bad" />
                </RadioGroup>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewToprakDurumu"
                    android:layout_width="110dp"
                    android:layout_height="37dp"
                    android:gravity="center_vertical"
                    android:text="@string/o_o_b_soil_condition" />

                <RadioGroup
                    android:id="@+id/RadioButtonToprakDurumu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButtonToprakDurumuKuru"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/o_o_b_soil_dry" />

                    <RadioButton
                        android:id="@+id/radioButtonToprakDurumuNemli"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/o_o_b_soil_damp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTopraklayiciTesisSekli"
                    android:layout_width="110dp"
                    android:layout_height="75dp"
                    android:gravity="center_vertical"
                    android:text="@string/o_o_b_grounding_facility_shape" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkBoxTemel"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/o_o_b_grounding_root" />

                        <CheckBox
                            android:id="@+id/checkBoxDerin"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/o_o_b_grounding_deep" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkBoxRing"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/o_o_b_grounding_ring" />

                        <CheckBox
                            android:id="@+id/checkBoxBelirsiz"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="fill_vertical"
                            android:text="@string/o_o_b_grounding_uncertain" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonKaydet"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:text="@string/o_o_b_save" />
            </LinearLayout>

        </LinearLayout>



    </ScrollView>

</android.support.constraint.ConstraintLayout>